---
import MainLayout from "../layouts/main-layout.astro";
import Button from "../components/button.tsx";
import ArrowSec from "../icons/arrow-sec.tsx";
import CallIcon from "../icons/call.tsx";
import Experience from "../components/experience.tsx";

const services = [
  {
    title: "Project Planning",
    text: "We help you create a detailed roadmap for your interior design project, ensuring each phase is meticulously planned and executed to meet your vision and expectations.",
  },
  {
    title: "Interior Design",
    text: "Our expert designers craft beautiful, functional spaces that reflect your unique style and needs, from concept to completion, blending aesthetics with functionality.",
  },
  {
    title: "Space Realization",
    text: "Transform your ideas into reality with our comprehensive space realization services. We manage the construction, execution, and finishing touches to bring your design to life.",
  },
];

const reviews = [
  {
    img: "/avatar.png",
    name: "Mohammed Fahique", // Muslim name
    location: "Bhatkal, India", // Location: Bhatkal, India
    review:
      "I had an amazing experience with Abu Interiors! Their attention to detail is unparalleled. From concept to execution, the team was professional and efficient. They transformed my home into a beautiful space, and I couldn’t be happier with the results. Highly recommended!", // Review content
  },
  {
    img: "/avatar.png",
    name: "Mohammed Suhail", // Muslim name
    location: "Bhatkal, India", // Location: Bhatkal, India
    review:
      "Abu Interiors is simply the best! The design ideas they provided for my office space were exactly what I was looking for. They listened to my needs and worked with me every step of the way. The final result was beyond my expectations. I can’t thank them enough for their dedication and creativity!", // Review content
  },
  {
    img: "/avatar.png",
    name: "Engineer Mazar", // Muslim name
    location: "Bhatkal, India", // Location: Bhatkal, India
    review:
      "The team at Abu Interiors exceeded all my expectations. They were professional, attentive, and always kept me in the loop throughout the design process. Their work transformed my home and made it feel much more welcoming. I would definitely recommend them to anyone looking for high-quality interior design!", // Review content
  },
];

const projects = [
  {
    img: "/kitchen.jpeg",
    name: "Modern Kitchen",
    text: "Decor / Artchitecture",
  },
  {
    img: "/bedroom.jpeg",
    name: "Modern Bedroom",
    text: "Decor / Artchitecture",
  },
  {
    img: "/dining.jpeg",
    name: "Modern Dining Hall",
    text: "Decor / Artchitecture",
  },
  {
    img: "/livingspace.jpeg",
    name: "Modern Living Room",
    text: "Decor / Artchitecture",
  },
];

const clientLogos = [
  {
    img: "/clientLogo1.svg",
  },
  {
    img: "/clientLogo2.svg",
  },
  {
    img: "/clientLogo3.svg",
  },
  {
    img: "/clientLogo4.svg",
  },
